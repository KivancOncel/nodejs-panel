<%- include('../../layouts/head.ejs') %>    
    </head>

    <body><!-- Begin page -->
        <div class="wrapper">
            
            <%- include('../../layouts/topbar.ejs') %>

            <%- include('../../layouts/navigation.ejs') %>

            <!-- ============================================================== -->
        <!-- Start Page Content here -->
        <!-- ============================================================== -->

        <div class="content-page">
            <div class="content">

                <!-- Start Content-->
                <div class="container-fluid">

                    <!-- start page title -->
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box">
                                <div class="page-title-right">
                                    <ol class="breadcrumb m-0">
                                        <li class="breadcrumb-item"><a href="/admin/dashboard">Grator</a></li>
                                        <li class="breadcrumb-item" ><a href="/admin/user/user-list">User List</a></li>
                                        <li class="breadcrumb-item active">User Update</li>
                                    </ol>
                                </div>
                                <h4 class="page-title">User Update</h4>
                            </div>
                        </div>
                    </div>
                    <!-- end page title -->                    

                    <div class="row">
                        <div class="col-12">
                            <form method="post" action="/admin/user/user-edit/<%=user._id%>">
                                <div class="row row-cols-sm-2 row-cols-1">
                                    <div class="mb-2">
                                        <label class="form-label" for="FullName">Full
                                            Name</label>
                                        <input type="text" name="namesurname" value="<%=user.namesurname%>" id="FullName"
                                            class="form-control">
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label" for="Email">Email</label>
                                        <input type="email" name="mail" value="<%=user.mail%>"
                                            id="Email" class="form-control">
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label" for="web-url">Website</label>
                                        <input type="text" name="weburl" value="<%=user.weburl%>"
                                            id="web-url" class="form-control">
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label"
                                            for="Username">Username</label>
                                        <input type="text" name="name" value="<%=user.name%>" id="Username"
                                            class="form-control">
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label"
                                            for="Password">Password</label>
                                        <input type="password" name="password" placeholder="<%=user.password%>"
                                        value="<%=user.password%>" id="Password" class="form-control">
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label"
                                            for="RePassword">Re-Password</label>
                                        <input type="password" name="passwordre" placeholder="6 - 15 Characters"
                                            id="RePassword" class="form-control">
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label"
                                            for="title">Title</label>
                                        <input type="text" name="title" value="<%=user.title%>"
                                            id="title" class="form-control">
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label"
                                            for="phone">Phone</label>
                                        <input type="text" name="phone" value="<%=user.phone%>"
                                            id="phone" class="form-control">
                                    </div>
                                    <div class="col-sm-12 mb-3">
                                        <label class="form-label" for="AboutMe">About Me</label>
                                        <textarea name="description" style="height: 125px;" id="AboutMe"
                                            class="form-control"><%=user.description%></textarea>
                                    </div>
                                </div>
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                                    Save
                                </button>
                                <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true" style="display: none;">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="staticBackdropLabel"><%=user.namesurname%> Update Page</h5>
                                            </div> <!-- end modal header -->
                                            <div class="modal-body">
                                                <p class="m-0">Do you confirm the updates you made?</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>   
                                                <button class="btn btn-primary" type="submit">Save</button>
                                            </div> <!-- end modal footer -->
                                        </div> <!-- end modal content-->
                                    </div> <!-- end modal dialog-->
                                </div>
                            </form>
                        </div> <!-- end col -->
                    </div>
                    <!-- end row -->


                </div> <!-- container -->

            </div> <!-- content -->

        <%- include('../../layouts/end.ejs') %>
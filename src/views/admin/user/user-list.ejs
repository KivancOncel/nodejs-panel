<%- include('../../layouts/head.ejs') %>    
    </head>

    <body><!-- Begin page -->
        <div class="wrapper">
            
            <%- include('../../layouts/topbar.ejs') %>

            <%- include('../../layouts/navigation.ejs') %>

            <!-- ============================================================== -->
        <!-- Start Page Content here -->
        <!-- ============================================================== -->

        <div class="content-page">
            <div class="content">

                <!-- Start Content-->
                <div class="container-fluid">

                    <!-- start page title -->
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box">
                                <div class="page-title-right">
                                    <ol class="breadcrumb m-0">
                                        <li class="breadcrumb-item"><a href="/admin/dashboard">Grator Dashboard</a></li>
                                        <li class="breadcrumb-item active">User List</li>
                                    </ol>
                                </div>
                                <h4 class="page-title">User List</h4>
                            </div>
                        </div>
                    </div>
                    <!-- end page title -->

                    <div class="row">
                        <div class="col">
                            <div class="card">
                                <div class="card-header d-flex  justify-content-between align-items-center">
                                    <h4 class="header-title">User List Table</h4>
                                    <a class="btn btn-primary" href="/admin/user/user-add">Add User</a>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive-sm">
                                        <table class="table table-striped table-centered mb-0">
                                            <thead>
                                                <tr>
                                                    <th>Photo</th>
                                                    <th>Username</th>
                                                    <th>Mail</th>
                                                    <th>Phone</th>
                                                    <th>Register</th>
                                                    <th>Settings</th>
                                                </tr>
                                            </thead>
                                            <tbody>                                                
                                                <% for (let data of userAll) {  %>                                                        
                                                    <tr>
                                                        <td class="table-user">
                                                            <img src="/uploads/<%=data.photo%>" alt="table-user"
                                                                class="me-2 rounded-circle" />
                                                                <%=data.namesurname%>
                                                        </td>
                                                        <td>
                                                            <%=data.name%></td>
                                                        <td>
                                                            <%=data.mail%></td>
                                                        <td>
                                                            <%=data.phone%></td>
                                                        <td>
                                                            <% if(data.register != 1) { %>
                                                                <p class="alert alert-danger text-center my-auto">Unregistered</p>
                                                            <% } else { %>
                                                                <p class="alert alert-success text-center my-auto">Registered</p>
                                                            <% } %></td>
                                                        <td>
                                                            <% if(data.register != 1) { %>
                                                                <a title="Register User For Login" href="/admin/user/user-register/<%=data._id%>/<%=data.register%>" class="text-reset fs-16 px-1"> <i
                                                                class="ri-check-line"></i></a>
                                                            <% } else { %>
                                                                <a title="Unregister User For Login" href="/admin/user/user-register/<%=data._id%>/<%=data.register%>" class="text-reset fs-16 px-1"> <i
                                                                class="ri-close-fill"></i></a>
                                                            <% } %>     
                                                            <a title="Change User Image" href="/admin/user/user-image/<%=data._id%>" class="text-reset fs-16 px-1"> <i
                                                                    class="ri-image-line"></i></a>                                                     
                                                            <a title="Edit User" href="/admin/user/user-edit/<%=data._id%>" class="text-reset fs-16 px-1"> <i
                                                                    class="ri-settings-3-line"></i></a>
                                                            <a title="Delete User" href="/admin/user/user-delete/<%=data._id%>" class="text-reset fs-16 px-1"> <i
                                                                    class="ri-delete-bin-2-line"></i></a>
                                                        </td>
                                                    </tr>
                                                <% } %>                                                
                                            </tbody>
                                        </table>
                                    </div> <!-- end table-responsive-->

                                </div> <!-- end card body-->
                            </div> <!-- end card -->
                        </div><!-- end col-->

                </div> <!-- container -->

            </div> <!-- content -->

        <!-- ============================================================== -->
        <!-- End Page content -->
        <!-- ============================================================== -->

        <%- include('../../layouts/end.ejs') %>
<%- include('../../layouts/head.ejs') %>    
    </head>

    <body><!-- Begin page -->
        <div class="wrapper">
            
            <%- include('../../layouts/topbar.ejs') %>

            <%- include('../../layouts/navigation.ejs') %>

            <!-- ============================================================== -->
        <!-- Start Page Content here -->
        <!-- ============================================================== -->

        <div class="content-page">
            <div class="content">

                <!-- Start Content-->
                <div class="container-fluid">

                    <!-- start page title -->
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box">
                                <div class="page-title-right">
                                    <ol class="breadcrumb m-0">
                                        <li class="breadcrumb-item"><a href="/admin/dashboard">Grator Dashboard</a></li>
                                        <li class="breadcrumb-item active">Category List</li>
                                    </ol>
                                </div>
                                <h4 class="page-title">Category List</h4>
                            </div>
                        </div>
                    </div>
                    <!-- end page title -->

                    <div class="row">
                        <div class="col">
                            <div class="card">
                                <div class="card-header d-flex  justify-content-between align-items-center">
                                    <h4 class="header-title">Category List Table</h4>
                                    <a class="btn btn-primary" href="/admin/category/category-add">Add Category</a>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive-sm">
                                        <table class="table table-striped table-centered mb-0">
                                        <thead>
                                            <tr>
                                            <th>Adı</th>
                                            <th>Slug</th>
                                            <th>Oluşturulma Tarihi</th>
                                            <th>İşlemler</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% categories.forEach(function(category) { %>
                                            <tr>
                                                <td><%= category.name %></td>
                                                <td><%= category.slug %></td>
                                                <td><%= new Date(category.createDate).toLocaleString() %></td>
                                                <td>
                                                <a href="/admin/category/category-edit/<%= category._id %>" class="btn btn-warning btn-sm">Düzenle</a>
                                                <a href="/admin/category/category-delete/<%= category._id %>" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                        </tbody>
                                        </table>
                                    </div> <!-- end table-responsive-->

                                </div> <!-- end card body-->
                            </div> <!-- end card -->
                        </div><!-- end col-->

                </div> <!-- container -->

            </div> <!-- content -->

        <!-- ============================================================== -->
        <!-- End Page content -->
        <!-- ============================================================== -->

    <%- include('../../layouts/end.ejs') %>
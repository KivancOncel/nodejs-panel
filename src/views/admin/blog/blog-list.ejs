<%- include('../../layouts/head.ejs') %>
<body>
    <div class="wrapper">
        <%- include('../../layouts/topbar.ejs') %>
        <%- include('../../layouts/navigation.ejs') %>
        <div class="content-page">
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box">
                                <div class="page-title-right">
                                    <ol class="breadcrumb m-0">
                                        <li class="breadcrumb-item"><a href="/admin/dashboard">Grator Dashboard</a></li>
                                        <li class="breadcrumb-item active">Blog List</li>
                                    </ol>
                                </div>
                                <h4 class="page-title">Blog List</h4>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="card">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <h4 class="header-title">Blog List Table</h4>
                                    <a class="btn btn-primary" href="/admin/blog/blog-add">Add Blog</a>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive-sm">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>Başlık</th>
                                                    <th>Yazar</th>
                                                    <th>Yayın</th>
                                                    <th>Oluşturulma</th>
                                                    <th>İşlemler</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% blogs.forEach(function(blog) { %>
                                                    <tr>
                                                        <td><%= blog.title %></td>
                                                        <td><%= blog.author %></td>
                                                        <td><%= blog.isPublished ? "Yayında" : "Taslak" %></td>
                                                        <td><%= new Date(blog.createdAt).toLocaleString() %></td>
                                                        <td>
                                                            <a href="/admin/blog/blog-edit/<%= blog._id %>" class="btn btn-warning btn-sm">Düzenle</a>
                                                            <a href="/admin/blog/blog-delete/<%= blog._id %>" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                                                        </td>
                                                    </tr>
                                                <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include('../../layouts/end.ejs') %>
    </div>
</body>
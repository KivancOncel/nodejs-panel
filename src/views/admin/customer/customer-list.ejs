<%- include('../../layouts/head.ejs') %>   
    </head>

    <body><!-- Begin page -->
        <div class="wrapper">
            
            <%- include('../../layouts/topbar.ejs') %>

            <%- include('../../layouts/navigation.ejs') %>

            <!-- ============================================================== -->
        <!-- Start Page Content here -->
        <!-- ============================================================== -->

        <div class="content-page">
            <div class="content">

                <!-- Start Content-->
                <div class="container-fluid">

                    <!-- start page title -->
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box">
                                <div class="page-title-right">
                                    <ol class="breadcrumb m-0">
                                        <li class="breadcrumb-item"><a href="/admin/dashboard">Grator Dashboard</a></li>
                                        <li class="breadcrumb-item active">Customer List</li>
                                    </ol>
                                </div>
                                <h4 class="page-title">Customer List</h4>
                            </div>
                        </div>
                    </div>
                    <!-- end page title -->

                    <div class="row">
                        <div class="col">
                            <div class="card">
                                <div class="card-header d-flex  justify-content-between align-items-center">
                                    <h4 class="header-title">Customer List Table</h4>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive-sm">
                                        <table class="table">
                                            <thead>
                                            <tr>
                                                <th>Ad Soyad</th>
                                                <th>E-posta</th>
                                                <th>Telefon</th>
                                                <th>Kayıt Tarihi</th>
                                                <th>Durum</th>
                                                <th>İşlemler</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            <% customers.forEach(function(customer) { %>
                                                <tr>
                                                <td><%= customer.name %></td>
                                                <td><%= customer.email %></td>
                                                <td><%= customer.phone %></td>
                                                <td><%= new Date(customer.createdAt).toLocaleString() %></td>
                                                <td><%= customer.status ? "Aktif" : "Pasif" %></td>
                                                <td>
                                                    <a href="/admin/customer/customer-detail/<%= customer._id %>" class="btn btn-info btn-sm">Detay</a>
                                                    <a href="/admin/customer/customer-delete/<%= customer._id %>" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                                                </td>
                                                </tr>
                                            <% }) %>
                                            </tbody>
                                        </table>
                                    </div> <!-- end table-responsive-->

                                </div> <!-- end card body-->
                            </div> <!-- end card -->
                        </div><!-- end col-->

                </div> <!-- container -->

            </div> <!-- content -->

        <!-- ============================================================== -->
        <!-- End Page content -->
        <!-- ============================================================== -->

        <%- include('../../layouts/end.ejs') %>